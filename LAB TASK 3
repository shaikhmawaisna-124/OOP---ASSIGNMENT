\\Task 1:
public class Main {
    public static void main(String[] args) {

        // Create Address object
        Address address = new Address("Street 10", "House #25", "Quetta", "54000");

        // Create Person object with address
        Person person = new Person("Talha", address);

        // Print Person Information
        System.out.println(person);
    }
}


\\Task 2:
public class Main {
    public static void main(String[] args) {

        // Creating Date objects
        Date dob = new Date(10, 5, 1975);
        Date doj = new Date(12, 3, 2010);

        // Creating Employee object
        Employee emp = new Employee("Talha", dob, doj);

        // Display results
        emp.displayInfo();
    }
}


\\Task 3:
public class Main {
    public static void main(String[] args) {

        System.out.println("Enter Book Details:");
        Book b = new Book();
        b.getdata();

        System.out.println("\nEnter Tape Details:");
        Tape t = new Tape();
        t.getdata();

        System.out.println("\n===== Book Information =====");
        b.putdata();

        System.out.println("\n===== Tape Information =====");
        t.putdata();
    }
}


