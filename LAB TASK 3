        l.display();
    }
}


\\Home Task 1:
public class Main {
    public static void main(String[] args) {

        Test student = new Test();

        System.out.println("=== Enter Student Information ===");
        student.getdata();

        System.out.println("\n=== Enter Student Marks ===");
        student.getmarks();

        student.Finalresult(); // calculate final marks

        System.out.println("\n===== Student Record =====");
        student.putdata();
        student.putmarks();
    }
}


\\Home Task 2:
public class Complex extends Simple {

    public Complex(double num1, double num2) {
        super(num1, num2);
    }

    private boolean checkValues() {
        return num1 > 0 && num2 > 0;
    }

    @Override
    public void add() {
        if (checkValues())
            super.add();
        else
            System.out.println("Error: Numbers must be greater than 0.");
    }

    @Override
    public void sub() {
        if (checkValues())
            super.sub();
        else
            System.out.println("Error: Numbers must be greater than 0.");
    }

    @Override
    public void mul() {
        if (checkValues())
            super.mul();
        else
            System.out.println("Error: Numbers must be greater than 0.");
    }

    @Override
    public void div() {
        if (checkValues())
            super.div();
        else
            System.out.println("Error: Numbers must be greater than 0.");
    }
}


\\Home Task 3:
public class Main {
    public static void main(String[] args) {

        Electricity e1 = new Electricity(80);
        More_Electricity e2 = new More_Electricity(300);

        System.out.println("Cost for 80 units: Rs. " + e1.Bill());
        System.out.println("Cost for 300 units (with surcharge): Rs. " + e2.Bill());
    }
}


\\Home Task 4:
public class Main {
    public static void main(String[] args) {

        // ========== Simple Package ==========
        Package p = new Package(
                "Awais", "Street 1", "Quetta", "Balochistan", "54000",
                "Hameer", "Street 5", "Karachi", "Sindh", "75000",
                10, 2.0
        );

        // ========== Two Day Package ==========
        TwoDayPackage tdp = new TwoDayPackage(
                "Awais", "Street 1", "Quetta", "Balochistan", "54000",
                "sufyan", "Street 5", "Karachi", "Sindh", "75000",
                10, 2.0, 50
        );

        // ========== Overnight Package ==========
        OvernightPackage onp = new OvernightPackage(
                "Awais", "Street 1", "Quetta", "Balochistan", "54000",
                "sufyan", "Street 5", "Karachi", "Sindh", "75000",
                10, 2.0, 1.5
        );

        System.out.println("Cost of Standard Package: Rs. " + p.calculateCost());
        System.out.println("Cost of Two-Day Package: Rs. " + tdp.calculateCost());
        System.out.println("Cost of Overnight Package: Rs. " + onp.calculateCost());
    }
}
